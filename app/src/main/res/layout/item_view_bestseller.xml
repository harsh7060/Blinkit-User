<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="9.10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_95sdp"
        android:id="@+id/llProductImages"
        android:orientation="vertical"
        android:background="@drawable/bg_bestseller"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="58.50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:id="@+id/ivProduct1"
                android:layout_margin="6.50dp"
                android:background="@drawable/bg_product"
                android:visibility="gone"
                android:src="@drawable/instant"/>

            <ImageView
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:id="@+id/ivProduct2"
                android:layout_margin="6.50dp"
                android:background="@drawable/bg_product"
                android:visibility="gone"
                android:src="@drawable/masala"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="58.50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="52.00dp"
                android:layout_height="52.00dp"
                android:id="@+id/ivProduct3"
                android:layout_margin="6.50dp"
                android:background="@drawable/bg_product"
                android:visibility="gone"
                android:src="@drawable/cold_drink"/>

            <TextView
                android:layout_width="52.00dp"
                android:layout_height="52.0dp"
                android:id="@+id/tvProductCount"
                android:layout_margin="6.50dp"
                android:text="+1"
                android:background="@drawable/bg_product"
                android:gravity="center"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="23.40sp"/>


        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llProductImages">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Milk, Curd and Paneer"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="14.30sp"
            android:textStyle="bold"
            android:id="@+id/tvProductTypeName"
            android:layout_marginTop="3.90dp"
            android:layout_weight="0.5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 products"
            android:maxLines="2"
            android:textColor="#847F7F"
            android:textSize="14.30sp"
            android:id="@+id/tvTotalProducts"
            android:layout_marginTop="3.90dp"
            android:layout_weight="0.5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See all"
            android:maxLines="2"
            android:textColor="@color/green"
            android:padding="5.20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="14.30sp"
            android:background="@drawable/bg_see_all"
            android:id="@+id/tvSeeAll"
            android:layout_marginTop="3.90dp"
            android:layout_weight="0.5"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>